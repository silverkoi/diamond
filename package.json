    "@typescript-eslint/parser": "^7.10.0",
    "chai-better-shallow-deep-equal": "^1.1.1",
    "eslint": "^8.57.0",
    "eslint-plugin-no-null": "^1.0.2",
    "ethers": "^6.12.1",
    "hardhat": "^2.22.4",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^5.0.1",
    "tsconfig-paths": "^4.2.0"
  },
  "engines": {
    "npm": ">=10.5.0",
    "node": ">=20.13.1"
